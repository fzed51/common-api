{
  "name": "fzed51/common-api",
  "description": "Structure de base pour une API fonctionnant avec Slim Framework v3",
  "authors": [
    {
      "name": "Fabien Sanchez",
      "email": "fzed51+git@gmail.com"
    }
  ],
  "license": "MIT",
  "require": {
    "php": "^7.2",
    "ext-pdo": "*",
    "ext-json": "*",
    "ext-openssl": "*",
    "slim/slim": "^3",
    "respect/validation": "^1",
    "fzed51/repository": "^1",
    "fzed51/pdo-helper": "^1",
    "fzed51/instance-resolver": "^1"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.4",
    "phpunit/phpunit": "^8"
  },
  "scripts": {
    "test": "phpunit"
  },
  "autoload": {
    "psr-4": {
      "CommonApi\\": "./commonapi",
      "Test\\": "./test/CommonApi"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Test\\": "./tests"
    },
    "files": [
      "./function.php"
    ]
  },
  "suggest": {
    "squizlabs/php_codesniffer": "Detecte et fix les violation de norme de codage",
    "phpunit/phpunit": "Test unitaire",
    "fzed51/migration": "Gestion des migration de base de donn√©es",
    "fzed51/domaine": "Organisation du code en query et command"
  }
}
